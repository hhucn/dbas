<tal:block metal:use-macro="layout" i18n:domain="dbas" metal:define-macro="layout">
	<tal:block metal:fill-slot="content_page">

		<div class="container colored-container" tal:condition="not:subpage.has_access">
            <h5>You have to earn more reputation for this queue!</h5>
			<img class="center" src="${request.static_url('dbas:static/images/nopower.jpg')}">
		</div>

		<div class="container colored-container" tal:condition="subpage.has_access and subpage.no_arguments_to_review">
            <h5 class="center" i18n:translate="no_arguments_to_review">No arguments to review in this queue!</h5>
		</div>

		<div class="container colored-container" tal:condition="not:subpage.no_arguments_to_review">
            <div tal:omit-tag=""  tal:condition="subpage.has_access">

                <div class="row" style="margin-bottom: 1em;">
                    <div class="col-md-12">
                        <ul class="breadcrumb">
                            <li><a href="${request.application_url}/review" i18n:translate="review">Review</a></li>
                            <li tal:condition="subpage.button_set.is_delete" class="active" i18n:translate="deletes">Deletes</li>
                            <li tal:condition="subpage.button_set.is_optimize" class="active" i18n:translate="optimizations">Optimizations</li>
                            <li tal:condition="subpage.button_set.is_edit" class="active" i18n:translate="edits">Edits</li>
                            <li tal:condition="subpage.button_set.is_duplicate" class="active" i18n:translate="duplicates">Duplicates</li>
                        </ul>
                    </div>
                </div>

                <div class="row" style="margin-bottom: 1em;">
                    <div class="col-md-7">
                        <h6>${structure:subpage.elements.reviewed_argument.reason}
                            <a id="more_about_reason"  href="#" i18n:translate="wrapped_more">(more)</a>
                            <a id="less_about_reason" href="#" i18n:translate="wrapped_less" style="display: none;">(less)</a>
                        </h6>
                    </div>
                    <div class="col-md-5" tal:condition="subpage.button_set.is_delete">
                        <a id="del_skip" href="#" class="review-btn-delete btn btn-info btn-sm pull-right" data-queue="delete" i18n:translate="skip_it" tal:attributes="data-id subpage.elements.reviewed_argument.stats.id">Skip it</a>
                        <a id="del_ack" href="#" class="review-btn-delete btn btn-danger btn-sm pull-right" data-queue="delete" i18n:translate="delete_it" tal:attributes="data-id subpage.elements.reviewed_argument.stats.id">Delete it</a>
                        <a id="del_nack" href="#" class="review-btn-delete btn btn-success btn-sm pull-right" data-queue="delete" i18n:translate="its_okay" tal:attributes="data-id subpage.elements.reviewed_argument.stats.id">It's Okay</a>
                    </div>
                    <div class="col-md-5" tal:condition="subpage.button_set.is_optimize">
                        <a id="opti_skip" href="#" class="review-btn-optimize btn btn-info btn-sm pull-right" data-queue="optimization" i18n:translate="skip_it" tal:attributes="data-id subpage.elements.reviewed_argument.stats.id">Skip it</a>
                        <a id="opti_nack" href="#" class="review-btn-optimize btn btn-danger btn-sm pull-right" data-queue="optimization" i18n:translate="its_okay_so" tal:attributes="data-id subpage.elements.reviewed_argument.stats.id">It's okay so</a>
                        <a id="opti_ack" href="#" class="review-btn-optimize btn btn-success btn-sm pull-right" data-queue="optimization" i18n:translate="correct_it" tal:attributes="data-id subpage.elements.reviewed_argument.stats.id">Let me correct it</a>
                    </div>
                    <div class="col-md-5" tal:condition="subpage.button_set.is_edit">
                        <a id="edit_skip" href="#" class="review-btn-edit btn btn-info btn-sm pull-right" data-queue="edit" i18n:translate="skip_it" tal:attributes="data-id subpage.elements.reviewed_argument.stats.id">Skip it</a>
                        <a id="edit_nack" href="#" class="review-btn-edit btn btn-danger btn-sm pull-right" data-queue="edit" i18n:translate="reject_it" tal:attributes="data-id subpage.elements.reviewed_argument.stats.id">Reject it</a>
                        <a id="edit_ack" href="#" class="review-btn-edit btn btn-success btn-sm pull-right" data-queue="edit" i18n:translate="its_okay" tal:attributes="data-id subpage.elements.reviewed_argument.stats.id">It's Okay</a>
                    </div>
                    <div class="col-md-5" tal:condition="subpage.button_set.is_duplicate">
                        <a id="duplicate_skip" href="#" class="review-btn-duplicate btn btn-info btn-sm pull-right" data-queue="duplicates" i18n:translate="skip_it" tal:attributes="data-id subpage.elements.reviewed_argument.stats.id">Skip it</a>
                        <a id="duplicate_nack" href="#" class="review-btn-duplicate btn btn-danger btn-sm pull-right" data-queue="duplicates" i18n:translate="unique" tal:attributes="data-id subpage.elements.reviewed_argument.stats.id">Unique</a>
                        <a id="duplicate_ack" href="#" class="review-btn-duplicate btn btn-success btn-sm pull-right" data-queue="duplicates" i18n:translate="duplicate" tal:attributes="data-id subpage.elements.reviewed_argument.stats.id">Duplicate</a>
                    </div>
                </div>

                <div class="row" id="more_about_reason_content" style="display:none; margin-bottom: 1em;">
                    <div class="col-md-7">
                        <blockquote tal:condition="not:(subpage.button_set.is_edit or subpage.button_set.is_duplicate)">
                            <div style="padding-left: 0.5em">
                                <span i18n:translate="information_for_the_different_reasons">Information for the different reasons</span>
                                <ul style="padding-left: 0.5em">
                                    <li><strong i18n:translate="off_topic_or_irrelevant">Off topic or irrelevant</strong> <span i18n:translate="off_topic_explanation">text does not belong to the topic under discussion</span>.</li>
                                    <li><strong i18n:translate="inappropriate_harmful_abbusive">Inappropriate, harmful or abusive</strong> <span i18n:translate="inappropriate_harmful_abbusive_explanation">are posts, which are inappropriate, harmful or abbusive</span>.</li>
                                    <li><strong i18n:translate="needs_optimization">Needs optimization</strong> <span i18n:translate="needs_optimization_explanation">if posts are useful, but need edits in grammar and/or spelling</span>.</li>
                                    <!--<li><strong i18n:translate="spam">Spam</strong> <span i18n:translate="spam_explanation">is neither useful nor mapped to a discussions topic</span>.</li>-->
                                </ul>
                            </div>
                        </blockquote>
                    </div>
                    <div class="col-md-5">
                        <blockquote class="blockquote-reverse" style="text-align: left;">
                            <div>
                                <span i18n:translate="information_for_the_different_buttons">Information for the different buttons</span>
                            </div>
                            <ul tal:condition="subpage.button_set.is_delete">
                                <li><span class="text-success" i18n:translate="its_okay">It's Okay</span> <span i18n:translate="its_okay_explanation">for arguments, which should not be deleted.</span></li>
                                <li><span class="text-danger" i18n:translate="delete_it">Delete it</span> <span i18n:translate="delete_it_explanation">for arguments, that should be deleted based on the reason above.</span></li>
                                <li><span class="text-info" i18n:translate="skip_it">Skip it</span> <span i18n:translate="skip_it_explanation">if you are not sure and want to go to the next argument.</span></li>
                            </ul>
                            <ul tal:condition="subpage.button_set.is_optimize" style="padding-left: 0.5em">
                                <li><span class="text-success" i18n:translate="correct_it">Let me correct it</span> <span i18n:translate="correct_it_explanation">, if you have an idea for a better formulation with the same content.</span></li>
                                <li><span class="text-danger" i18n:translate="its_okay_so">It's okay so</span> <span i18n:translate="its_okay_so_explanation">for arguments, which can be understood as-is.</span></li>
                                <li><span class="text-info" i18n:translate="skip_it">Skip it</span> <span i18n:translate="skip_it_explanation">if you are not sure and want to go to the next argument.</span></li>
                            </ul>
                            <ul tal:condition="subpage.button_set.is_edit" style="padding-left: 0.5em">
                                <li><span class="text-success" i18n:translate="its_okay">It's okay</span> <span i18n:translate="correction_is_okay">, if the correction is acceptable and the argument is not falsified.</span></li>
                                <li><span class="text-danger" i18n:translate="reject_it">Reject it</span> <span i18n:translate="reject_itexplanation">for correction which are inappropriate are wrong.</span></li>
                                <li><span class="text-info" i18n:translate="skip_it">Skip it</span> <span i18n:translate="skip_it_explanation">if you are not sure and want to go to the next argument.</span></li>
                            </ul>
                            <ul tal:condition="subpage.button_set.is_duplicate" style="padding-left: 0.5em">
                                <li><span class="text-success" i18n:translate="its_duplicate">It's a duplicate</span> <span i18n:translate="marked_statement_is_duplicate">, if the marked statement is a duplicate.</span></li>
                                <li><span class="text-danger" i18n:translate="its_unique">It's unique</span> <span i18n:translate="duplicate_is_unique">for marked statements, which are unique.</span></li>
                                <li><span class="text-info" i18n:translate="skip_it">Skip it</span> <span i18n:translate="skip_it_explanation">if you are not sure and want to go to the next statement.</span></li>
                            </ul>
                        </blockquote>
                    </div>
                </div>

                <div class="row" style="margin-bottom: 1em;">
                    <div class="col-md-offset-1 col-md-6">

                        <div class="well well-sm center" style="text-align: justify; margin-bottom: 1em;" tal:condition="subpage.button_set.is_edit">
                            <div style="margin-bottom: 1em;">
                                <span i18n:translate="in_the_discussion_about">In the discussion about</span>
                                <i>${structure:subpage.elements.reviewed_argument.issue}</i>
                                <span i18n:translate="following_argument_was_corrected">following argument was corrected.</span>
                            </div>
                            <i class="fa fa-quote-left" aria-hidden="true" style="padding: 0.5em;"></i>
                            <span class="lead" id="reviewed-argument-corrected-version">${structure:subpage.elements.reviewed_argument.corrected_version}</span>
                            <i class="fa fa-quote-right" aria-hidden="true" style="padding: 0.5em;"></i>
                        </div>

                        <div class="well well-sm center" style="text-align: justify; margin-bottom: 1em;" tal:condition="subpage.button_set.is_edit">
                            <div style="margin-bottom: 1em;">
                                <span i18n:translate="this_are_the_edit">This are the edits:</span>
                            </div>
                            <i class="fa fa-quote-left" aria-hidden="true" style="padding: 0.5em;"></i>
                            <span class="lead" id="reviewed-argument-correction">${structure:subpage.elements.reviewed_argument.corrections}</span>
                            <i class="fa fa-quote-right" aria-hidden="true" style="padding: 0.5em;"></i>
                        </div>

                        <div class="well well-sm center" style="text-align: justify;">
                            <div style="margin-bottom: 1em;" tal:condition="not:subpage.button_set.is_edit">
                                <span i18n:translate="in_the_discussion_about">In the discussion about</span>
                                <i>${structure:subpage.elements.reviewed_argument.issue}</i>
                                <span tal:condition="not:subpage.button_set.is_duplicate" i18n:translate="following_argument_was_flagged">following argument was flagged.</span>
                                <span tal:condition="subpage.button_set.is_duplicate" i18n:translate="following_statement_was_flagged">following statement was flagged.</span>
                            </div>
                            <div style="margin-bottom: 1em;" tal:condition="subpage.button_set.is_edit">
                                <span i18n:translate="this_is_original_version">This is the original version</span>:
                            </div>
                            <i class="fa fa-quote-left" aria-hidden="true" style="padding: 0.5em;"></i>
                            <span class="lead" id="reviewed-argument-text">${structure:subpage.elements.reviewed_argument.text}</span>
                            <i class="fa fa-quote-right" aria-hidden="true" style="padding: 0.5em;"></i>
                            <br>
                        </div>

                        <div class="well well-sm center" style="text-align: justify;" tal:condition="subpage.button_set.is_optimize">
                            <span i18n:translate="context_where_statement_is_used">Context, where the statement is used:</span>
                            <div tal:repeat="context subpage.elements.reviewed_argument.context">
                                <i class="fa fa-quote-left" aria-hidden="true" style="padding: 0.5em;"></i>
                                <span class="lead" id="reviewed-argument-text">${structure:context}</span>
                                <i class="fa fa-quote-right" aria-hidden="true" style="padding: 0.5em;"></i>
                            </div>
                        </div>

                        <div class="well well-sm center" style="text-align: justify;" tal:condition="subpage.button_set.is_duplicate">
                            <span i18n:translate="this_is_original_statements">This is the original statement:</span>
                            <br>
                            <i class="fa fa-quote-left" aria-hidden="true" style="padding: 0.5em;"></i>
                            <span class="lead" id="reviewed-argument-text">${subpage.elements.reviewed_argument.duplicate_of}</span>
                            <i class="fa fa-quote-right" aria-hidden="true" style="padding: 0.5em;"></i>
                        </div>

                    </div>
                    <div class="col-md-offset-2 col-md-3">
                        <table id="stats-table" class="table table-condensed pull-right" style="font-size: 14px;" tal:attributes="data-extra-info subpage.elements.reviewed_argument.extra_info">
                            <tbody>
                                <tr>
                                    <td i18n:translate="reported">Reported</td>
                                    <td>${subpage.elements.reviewed_argument.stats.reported}</td>
                                </tr>
                                <tr>
                                    <td i18n:translate="reported_by">Reported by</td>
                                    <td>
                                        <a tal:attributes="href subpage.elements.reviewed_argument.stats.reporter_url">
                                            <img class="img-circle" tal:attributes="src subpage.elements.reviewed_argument.stats.reporter_gravatar">
                                            ${subpage.elements.reviewed_argument.stats.reporter}
                                        </a>
                                    </td>
                                </tr>
                                <tal:comment replace="nothing">
                                <tr>
                                    <td i18n:translate="viewed">Viewed</td>
                                    <td>${subpage.elements.reviewed_argument.stats.viewed}</td>
                                </tr>
                                <tr>
                                    <td i18n:translate="attacks">Attacks</td>
                                    <td>${subpage.elements.reviewed_argument.stats.attacks}</td>
                                </tr>
                                <tr>
                                    <td i18n:translate="supports">Supports</td>
                                    <td>${subpage.elements.reviewed_argument.stats.supports}</td>
                                </tr>
                                </tal:comment>
                            </tbody>
                        </table>
                    </div>
                </div>

                <small id="review-id" class="text-muted pull-right" tal:attributes="data-id subpage.elements.reviewed_argument.stats.id">ID: ${subpage.elements.reviewed_argument.stats.id}</small>
            </div>
        </div>

        <div tal:condition="not:subpage.no_arguments_to_review">
		<div id="optimization-container" class="container colored-container" tal:condition="subpage.button_set.is_optimize" style="display: none;">
            <button id="close-optimization-container" type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="row">
                <div class="col-md-12">
                    <a id="request-lock" href="#" class="btn btn-warning btn-sm" i18n:translate="request_lock" tal:attributes="data-id subpage.elements.reviewed_argument.stats.id; data-lock_sec lock_time" style="margin-bottom: 1.0em; display: none;">Request lock</a>
                    <strong id="request-not-lock-text" class="text-danger" style="padding-left: 1em; display: none;">Data is not locked anymore, please request a new lock for your edits.</strong>
                    <p class="lead" id="request-lock-text">
                        <span i18n:translate="argument_is_locked">This argument is locked for your edit. You have </span>
                        <span id="countdown_timer_min"></span><span id="countdown_timer_point">:</span><span id="countdown_timer_sec"></span> <span i18n:translate="minutes">minutes</span>.
                        <span class="lead" i18n:translate="please_make_your_edits">Please make your edits in grammar and/or spelling here:</span>
                    </p>

                    <table class="table table-condensed" id="argument-part-table">
                        <thead>
                            <tr class="success">
                                <th i18n:translate="original">Original</th>
                                <th i18n:translate="your correcture">Your correcture</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr tal:repeat="part subpage.elements.reviewed_argument.parts">
                                <td style="width: 50%">${part.text}</td>
                                <td style="width: 50%">
                                    <input type="text" class="form-control" autocomplete="off" tal:attributes="placeholder part.text; data-statement part.statement_uid; data-argument part.argument_uid; data-type part.type">
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
            <a id="send_edit" href="#" class="btn btn-success pull-right disabled" i18n:translate="send" tal:attributes="data-id subpage.elements.reviewed_argument.stats.id">Send</a>
        </div>
        </div>

        <script type="text/javascript" src="${request.static_url('dbas:static/js/countdown.js')}"></script>
        <script type="text/javascript" src="${request.static_url('dbas:static/js/review/queue.js')}"></script>
        <script type="text/javascript" src="${request.static_url('dbas:static/js/review/review.js')}"></script>
        <script type="text/javascript" src="${request.static_url('dbas:static/js/review/callbacks.js')}"></script>

	</tal:block>
</tal:block>