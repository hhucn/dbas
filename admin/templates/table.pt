<tal:block metal:use-macro="load: ../../dbas/templates/basetemplate.pt" i18n:domain="admin" metal:define-macro="layout">
  <tal:block metal:fill-slot="content_page">

    <section>
      <div class="text-center big-header">
        <h3 class="text-center">Admin Menu</h3>
        <p class="lead text-center"><span class="lead"><span
            id="table_name">${table.name}</span> has ${table.count} Elements</span></p>
      </div>
    </section>

    <div class="wrapper-container">
      <div class="container colored-container overlap-with-big-header" style="width: 95%">
        <table id="data" class="table table-striped table-hover table-responsive" tal:condition="table.has_elements">
          <thead>
          <tr>
            <th tal:repeat="head table.head">${head}</th>
            <th>modify</th>
          </tr>
          </thead>
          <tbody>
          <tr tal:repeat="row table.row">
            <td tal:repeat="el row"><span>${structure:el}</span></td>
            <td>
              <a href="#" title="edit"><i class="fa pencil fa-pencil-square-o" aria-hidden="true"></i></a>
              <a href="#" title="delete"><i class="fa trash fa-trash-o" aria-hidden="true"></i></a>
              <a href="#" title="save" style="pointer-events: none"><i
                  class="fa floppy fa-floppy-o text-muted" aria-hidden="true"></i></a>
              <a href="#" title="cancel" style="pointer-events: none"><i class="fa fa-ban text-muted"
                                                                         aria-hidden="true"></i></a>
            </td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>

    <span class="icon-badge blue-btn bottom-right add" id="icon-add-news" title="Create">+</span>

    <script type="text/javascript" src="${request.static_path('dbas:static/js/discussion/lib.js')}"></script>
    <script type="text/javascript" src="${request.static_path('dbas:static/js/discussion/guihandler.js')}"></script>
    <script
        src="${request.static_path('dbas:static/node_modules/datatables/media/js/jquery.dataTables.min.js')}"></script>
    <script
        src="${request.static_path('dbas:static/node_modules/datatables-bootstrap/js/dataTables.bootstrap.js')}"></script>
    <script type="text/javascript"
            src="${request.static_path('admin:static/js/admin.min.js')}" tal:condition="not:extras.development_mode"></script>
    <script type="text/javascript"
            src="${request.static_path('admin:static/js/main/table.js')}" tal:condition="extras.development_mode"></script>
    <script type="text/javascript"
            src="${request.static_path('admin:static/js/main/ajaxhandler.js')}" tal:condition="extras.development_mode"></script>

  </tal:block>
</tal:block>